module scoringMechanism(touchdown, extraPoint, twoPointConversion, fieldGoal, safety, reset, score1, score2, possession);
	input touchdown, extraPoint, twoPointConversion, fieldGoal, safety, reset;
	output reg possession;
	output reg [6:0] score1;
	output reg [6:0] score2;
	
	initial begin
		score1 = 0;
		score2 = 0;
		possession = 1'b1;
	end
	
	always @(*) begin
		if (reset) begin
			score1 = 0;
			score2 = 0;
		end else begin
			if (touchdown)
				possession ? score2 += 6: score1 += 6;
			else if (extraPoint)
				possession ? score2 += 1: score1 += 1;
				possession = ~possession;
			else if (twoPointConversion)
				possession ? score2 += 2: score1 += 2;
				possession = ~possession;
			else if (fieldGoal)
				possession ? score2 += 3: score1 += 3;
				possession = ~possession;
			else if (safety)
				possession ? score2 += 2: score1 += 2;
				possession = ~possession;
		end
	
	
endmodule